  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
    <tr>
      <th>name</th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= user.introduction %>
      </th>
    </tr>
    </tbody>
  </table>
  <div class="row">
  <% if user == current_user %>
  <%= link_to edit_user_path(user), method: :get do %>
    <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i> 
  <% end %>
  <% end %>
  </div>